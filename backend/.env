# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/hazard-detection
MONGODB_TEST_URI=mongodb://localhost:27017/hazard-detection-test

# Google APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here

# External APIs
FIXMYSTREET_API_KEY=your_fixmystreet_api_key_here
FIXMYSTREET_BASE_URL=https://www.fixmystreet.com/api

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Engine
AI_ENGINE_URL=http://localhost:5000
AI_CONFIDENCE_THRESHOLD=0.7
